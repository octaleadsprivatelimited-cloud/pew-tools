rules_version = '2';

// Pew Tools â€” all app data in Firestore only.
// Public: read content. Authenticated (admin): read + write.
service cloud.firestore {
  match /databases/{database}/documents {
    // Products: public read, admin write
    match /products/{id} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Services: public read, admin write
    match /services/{id} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Portfolio: public read, admin write
    match /portfolio/{id} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Blogs: public read, admin write (app filters published client-side)
    match /blogs/{id} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Contact details: public read, admin write
    match /contactDetails/{id} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Deny any other collection by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
